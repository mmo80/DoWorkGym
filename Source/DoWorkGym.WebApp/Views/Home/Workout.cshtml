@{
    ViewBag.Title = "Workout";
}

<div>
    <h1>Add Workout</h1>
</div>
<div>
    <div class="form-group">
        <select id="trainings" class="form-control" data-bind="options: trainings, optionsText: 'Name', optionsValue: 'Id', optionsCaption: 'Trainings...'"></select>
    </div>
</div>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Last workout</th>
                <th class="hidden-xs">Workouts</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: exercises">
            <tr>
                <td data-bind="text: Name"></td>
                <td data-bind="text: LastWorkoutDate"></td>
                <td class="hidden-xs" data-bind="text: Count"></td>
                <td>
                    <a class="btn btn-sm btn-primary" data-bind="attr: { 'href': '/home/workoutdetail?trainingid=' + $root.trainingId() + '&exerciseid=' + Id() }">Start workout</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>


@section scripts {
    @Scripts.Render("~/bundles/workout")
}